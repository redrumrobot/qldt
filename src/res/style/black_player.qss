QSlider#soundVolumeSlider::groove:horizontal {
    border: 1px solid #656565;
    height: 4px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #616161, stop:1 #747474);
    margin: 2px 0;
}

QSlider#soundVolumeSlider::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #767676, stop: 0.08 #4f4f4f,
        stop: 0.49999 #414141, stop: 0.5 #323232,
        stop: 0.9 #2c2c2c, stop: 1 #131313);

    border: 1px solid #353535;
    border-top: none;
    border-bottom: none;
    width: 8px;
    height: 26px;
    margin: -10px -1;
}
