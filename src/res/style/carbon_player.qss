QSlider#soundVolumeSlider::groove:horizontal {
    border: 1px solid #999999;
    height: 4px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #919191, stop:1 #a4a4a4);
    margin: 2px 0;
}

QSlider#soundVolumeSlider::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #a6a6a6, stop: 0.08 #7f7f7f,
        stop: 0.49999 #717171, stop: 0.5 #626262,
        stop: 0.9 #4c4c4c, stop: 1 #333333);

    border: 1px solid #4a4a4a;
    border-top: none;
    border-bottom: none;
    width: 8px;
    height: 26px;
    margin: -10px -1;
}


